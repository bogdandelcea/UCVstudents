@model UCVstudents.Models.Student
<h2>Edit Student</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <label>First Name</label><input asp-for="FirstName" class="form-control" />
    <label>Last Name</label><input asp-for="LastName" class="form-control" />
    <label>Email</label><input asp-for="Email" class="form-control" />
    <label>Registration Number</label><input asp-for="RegistrationNumber" class="form-control" />
    <label>Enrollment Date</label><input asp-for="EnrollmentDate" class="form-control" />
    <button type="submit">Save</button>
</form>