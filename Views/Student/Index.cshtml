@model IEnumerable<UCVstudents.Models.Student>

@{
    ViewData["Title"] = "All Students";
}

<h1>All Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Registration Number</th>
            <th>Enrollment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Email</td>
                <td>@student.RegistrationNumber</td>
                <td>@student.EnrollmentDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
