@model UCVstudents.Models.Grade
@using Microsoft.AspNetCore.Mvc.Rendering
<h2>Edit Grade</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GradeId" />
    <label>Student</label>
    <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
    <label>Subject</label>
    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects"></select>
    <label>Value</label>
    <input asp-for="Value" class="form-control" />
    <label>Date Received</label>
    <input asp-for="DateReceived" class="form-control" />
    <button type="submit">Save</button>
</form>